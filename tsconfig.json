{
  "compilerOptions": {
    "target": "esnext",
    "declaration": false,
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,      // Разрешает импорт JSON файлов
    "baseUrl": "src",
    "paths": {
      "layouts/*": ["layouts/*"],
      "components/*": ["components/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "./gatsby-node.js",
    "./gatsby-config.ts",
    "./plugins/**/*",
    "declaration.d.ts"
  ]
}
